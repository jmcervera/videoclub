<% title(@season.title) %>
<div id="episode">
    <header>
        <h1><%= @season.title %></h1>
    </header>

    <header>
        <h2><%= @episode.title %></h2>

        <ul class="actions">
            <li>
                <%= link_to "Edit Episode",
                [:edit, :admin, @season, @episode], class: "edit" %>
            </li>
            <li>
                <%= link_to "Delete Episode",
                    [:admin, @season, @episode],
                    method: :delete,
                    data: {confirm: "Are you sure you want to delete this episode?"},
                    class: "delete" %>
            </li>
        </ul>
    </header>
    <%= simple_format(@episode.plot) %>
</div>
