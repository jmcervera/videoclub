<% title(@movie.title) %>
<header>
    <h1><%= @movie.title %></h1>

    <ul class="actions">
        <li>
            <%= link_to "Edit Movie", edit_movie_path(@movie), class: "edit" %>
        </li>
        <li>
            <%= link_to "Delete Movie", movie_path(@movie),
                method: :delete,
                data: {confirm: "Are you sure you want to delete this movie?"},
                class: "delete" %>
        </li>
    </ul>
</header>
<%= simple_format(@movie.plot) %>
