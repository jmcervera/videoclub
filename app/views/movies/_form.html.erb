<%= form_for @movie do |f| -%>

    <% if @movie.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@movie.errors.count, "error") %>
            prohibited this movie from being saved:</h2>

            <ul>
                <% @movie.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :title, "Title" %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :plot, "Plot" %> <br>
        <%= f.text_area :plot %>
    </p>
    <%= f.submit %>

<% end %>
